{
  "appId": "com.marix.app",
  "productName": "Marix",
  "copyright": "Copyright Â© 2025 marixdev",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "third_party/beekeeper-studio/apps/studio/dist-web",
      "to": "beekeeper-dist/web",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "third_party/beekeeper-studio/apps/studio/dist",
      "to": "beekeeper-dist/dist",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "third_party/beekeeper-studio/apps/studio/extra_resources",
      "to": "beekeeper-dist/extra_resources",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "third_party/beekeeper-studio/apps/studio/runtime_node_modules",
      "to": "beekeeper-dist/node_modules",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "third_party/beekeeper-studio/apps/studio/default.config.ini",
      "to": "beekeeper-dist/default.config.ini"
    },
    {
      "from": "third_party/beekeeper-studio/apps/studio/system.config.ini",
      "to": "beekeeper-dist/system.config.ini"
    },
    {
      "from": "third_party/beekeeper-studio/apps/studio/user.config.ini",
      "to": "beekeeper-dist/user.config.ini"
    },
    {
      "from": "third_party/beekeeper-studio/apps/studio/local.config.ini",
      "to": "beekeeper-dist/local.config.ini"
    }
  ],
  "asar": true,
  "compression": "maximum",
  "linux": {
    "icon": "icon",
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "deb",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "rpm",
        "arch": [
          "x64"
        ]
      }
    ],
    "category": "Development",
    "maintainer": "marixdev",
    "synopsis": "Modern SSH/SFTP/FTP Client",
    "description": "Marix - Modern Zero-Knowledge SSH Client with SFTP, FTP, RDP, WSS support"
  },
  "win": {
    "icon": "icon/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "include": "build/installer.nsh",
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Marix"
  },
  "mac": {
    "icon": "icon/icon.icns",
    "target": [
      {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "category": "public.app-category.developer-tools",
    "hardenedRuntime": false,
    "gatekeeperAssess": false
  },
  "publish": {
    "provider": "github",
    "owner": "marixdev",
    "repo": "marix"
  }
}
